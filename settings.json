{
  "ui_font_size": 17,
  "ui_font_weight": 600,
  "ui_font_family": "FreeMono",

  "enable_language_server": true,

  "buffer_font_size": 18,
  "buffer_font_family": "Cascadia Mono",
  "buffer_font_weight": 600,

  "cursor_blink": true,
  "cursor_shape": "bar",

  "format_on_save": "on",
  "soft_wrap": "editor_width",
  "theme": "Gruvbox Dark",

  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },

  "project_panel": {
    "dock": "right"
  },
  "languages": {
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true,
        "use_autoclose": true
      }
    },
    "HTML": {
      "use_autoclose": true
    }
  }
}
